<% include ../partials/header %>

<div class='container usertable'>

  <div class='row'>
    <div class='col-xs-12'>
      <h1>All Users</h1>
    </div>
  </div>

  <div class='row'>
    <div class='col-xs-3'>
      &nbsp;
    </div>
    <div class='col-xs-2'>
      <strong>Username</strong>
    </div>
    <div class='col-xs-2'>
      <strong>Administrator</strong>
    </div>
    <div class='col-xs-5'>
      <strong>User ID</strong>
    </div>
  </div>

<% users.forEach(function(user){ %>
  <div class="row" style="height: 40px;">
  <div class="col-xs-3" style="vertical-align: middle">
    <a class='btn btn-primary' href="/users/<%= user._id %>/edit"><span class="glyphicon glyphicon-edit" aria-hidden="true"></span> Edit</a>
    <form class='delete-form delete' action='/users/<%= user._id %>?_method=DELETE' method="POST">
      <button class='btn btn-danger'><span class="glyphicon glyphicon-remove" aria-hidden="true"></span> Delete</button>
    </form>
  </div>
    <div class='col-xs-2'>
      <%= user.username %>
    </div>
    <div class='col-xs-2'>
      <%= user.administrator %>
    </div>
    <div class='col-xs-5'>
      <%= user._id %>
    </div>
  </div>
<% }) %>

</div>

<div class='container'>
  <div class='row'>
    <div class='col-xs-12'>
      <% include ../partials/footer %>
    </div>
  </div>
</div>
