<% include ../partials/header %>

<div class='container'>

  <header class='jumbotron'>
    <div class='container'> <!--Want extra space when viewed on smaller screens-->
      <h1>Campgrounds</h1>
      <p>View our hand-picked campgrounds from all over the country!</p>
      <p>
        <a class="btn btn-primary btn-large" href='/campgrounds/new'>Add a new campground</a>
      </p>
    </div>
  </header>

  <div class='row'>
    <div class='col-lg-12'>
      <h3>Most Popular</h3>
    </div>
  </div>
  
  <div class='row text-center'>

    <% campgrounds.forEach(function(campground){ %>
      <div class='col-md-3 col-sm-6'>
        <div class='thumbnail'>
          <a href='/campgrounds/<%= campground._id %>'><img src=" <%= campground.image  %>"></a>
        </div>
        <div class='caption'>
          <h4> <%= campground.name %> </h4>
        </div> 
        <p>
          <a href='/campgrounds/<%= campground._id %>' class='btn btn-primary'>More Info</a>
        </p>
      </div>
    <% }); %>

  </div>

</div>

<% include ../partials/footer %>