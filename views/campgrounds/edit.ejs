<% include ../partials/header %>

<div class='container'>
  <div class='row'>
    <h1 style='text-align: center'>Edit <%= campground.name %></h1>
    <div style='margin: 25px auto;'>
      <form action='/campgrounds/<%= campground._id %>?_method=PUT' method='POST'>
        <div class='form-group'>
          <input class='form-control' type='text'     value='<%= campground.name %>'          name='campground[name]'>
        </div>
        <div class='form-group'>
          <input class='form-control' type='number'   value='<%= campground.price %>'         name='campground[price]' placeholder='price' min='0.01' step='0.01'>
        </div>
        <div class='form-group'>
          <input class='form-control' type='text'     value='<%= campground.image %>'         name='campground[image]'>
        </div>
        <div class='form-group'>
          <textarea class='form-control' type='textarea' rows='3' name='campground[description]'><%= campground.description %></textarea>
        </div>
        <div class='form-group'>
          <button class='btn btn-primary'>Submit</button>
        </div>
      </form>
      <a href='/campgrounds'>Go Back</a>
    </div>
  </div>
</div>

<% include ../partials/footer %>
